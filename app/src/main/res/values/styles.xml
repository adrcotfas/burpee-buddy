<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="viewInflaterClass">androidx.appcompat.app.AppCompatViewInflater</item>

        <item name="android:actionModeCloseDrawable">@drawable/ic_clear</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OverviewTextValue">
        <item name = "android:gravity">center</item>
        <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewTextDescription">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mdtp_ActionButton.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog"/>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
    </style>
</resources>
